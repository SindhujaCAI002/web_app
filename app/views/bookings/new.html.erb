<h1>BOOK NOW!!</h1>
<table >
<% Flight.all.each do |flight| %>
<tr>
<td><%= flight.id %></td>
  <td><%= flight.flight_code %></td>
  <td><%= flight.date %></td>
  <td><%= flight.start %></td>
  <td><%= flight.destination %></td>
  <td><%= flight.seats_avail %></td>
  </tr>
<% end %>
</table>
<div class="row">
<div class="col-md-6 col-md-offset-3">
<%= form_with(model: @booking, local: true) do |f| %>
<%= f.label :user_id %>
<%= f.text_field :user_id, value: session[:user_id]  %>

<%= f.label :flight_id %>
<%= f.text_field :flight_id %>

<%= f.submit "Book", class: "btn btn-primary" %>
<% end %>
</div>
</div>